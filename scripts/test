#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

export AZURE_STORAGE_CONNECTION_STRING=$LULCDATA_ASCS

if [[ -z AZURE_STORAGE_CONNECTION_STRING ]];
    echo "AZURE_STORAGE_CONNECTION_STRING not set"
    exit 1
fi

export NODEV='16.1.0' \
    && curl "https://nodejs.org/dist/v${NODEV}/node-v${NODEV}-linux-x64.tar.gz" | tar -xzv \
    && cp ./node-v${NODEV}-linux-x64/bin/node /usr/bin/ \
    && ./node-v${NODEV}-linux-x64/bin/npm install -g npm@7

docker-compose up --build -d
docker build -t gpu $(pwd)/services/gpu

npm install --include=dev
npm --prefix ./services/api/ install --include=dev
npm test

docker-compose kill
