{
    "type": "object",
    "required": [
        "name",
        "active",
        "model_type",
        "model_inputshape",
        "model_zoom",
        "classes",
        "meta"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "Human-readable name of the Model"
        },
        "active": {
            "type": "boolean",
            "description": "Can the model be used for gpu instances"
        },
        "model_type": {
            "type": "string",
            "description": "Underlying model type",
            "enum": [
                "random_forest",
                "pytorch_example",
                "pytorch_solar"
            ]
        },
        "model_zoom": {
            "type": "integer",
            "description": "The tile zoom level to run inferences on"
        },
        "model_inputshape": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "integer"
            }
        },
        "classes": {
            "type": "array",
            "description": "Named output classes & their associated colours",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "color"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    }
                }
            }
        },
        "bounds": {
            "type": ["array", "null"],
            "description": "Recommended geographic area on which this model can be used",
            "items": {
                "type": "number"
            }
        },
        "meta": {
            "type": "object",
            "description": "Generic key/value store for additional model metadata"
        }
    }
}
