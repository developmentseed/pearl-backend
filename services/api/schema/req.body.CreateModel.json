{
    "type": "object",
    "required": [
        "name",
        "active",
        "model_type",
        "model_inputshape",
        "model_zoom",
        "imagery_source_id",
        "classes",
        "meta"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "Human-readable name of the Model"
        },
        "active": {
            "type": "boolean",
            "description": "Can the model be used for gpu instances"
        },
        "storage": {
            "type": "boolean",
            "description": "Has the model been uploaded to azure - this is normally set by the server and not the client",
            "default": false
        },
        "imagery_source_id": {
            "type": "integer"
        },
        "model_type": {
            "type": "string",
            "description": "Underlying model type",
            "enum": [
                "unet3",
                "s2adeeplabv3plus",
                "random_forest",
                "pytorch_example",
                "pytorch_solar",
                "deeplabv3plus"
            ]
        },
        "model_zoom": {
            "type": "integer",
            "description": "The tile zoom level to run inferences on"
        },
        "model_inputshape": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "integer"
            }
        },
        "classes": {
            "$ref": "./util/classes.json"
        },
        "bounds": {
            "type": ["array", "null"],
            "description": "Recommended geographic area on which this model can be used",
            "items": {
                "type": "number"
            }
        },
        "meta": {
            "type": "object",
            "description": "Generic key/value store for additional model metadata"
        },
        "tagmap": {
            "$ref": "./util/osm-tagmap.json"
        },
        "imagery_source_id": {
            "type": "integer",
            "description": "The Imagery Sources that can be used with this model"
        }
    }
}
