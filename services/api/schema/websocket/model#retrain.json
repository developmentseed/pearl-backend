{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "action",
        "data"
    ],
    "properties": {
        "action": {
            "type": "string",
            "enum": ["model#retrain"]
        },
        "data": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name",
                "classes"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "classes": {
                    "type": "array",
                    "description": "Array of classes - none should be omitted, even if they don't need retraining",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "color",
                            "tagmap"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Class Name"
                            },
                            "geometry": {
                                "type": "object",
                                "description": "Optional Feature Collection of retrain geometries"
                            },
                            "color": {
                                "type": "string",
                                "description": "Hex Colour Code"
                            }
                        }
                    }
                }
            }
        }
    }
}

