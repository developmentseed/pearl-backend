{
    "type": "object",
    "required": [
        "id",
        "created",
        "active",
        "uid",
        "name",
        "model_type",
        "model_inputshape",
        "model_zoom",
        "storage",
        "classes",
        "meta",
        "bounds"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer"
        },
        "created": {
            "type": "integer"
        },
        "uid": {
            "type": "integer"
        },
        "name": {
            "type": "string",
            "description": "Human-readable name of the Model"
        },
        "active": {
            "type": "boolean",
            "description": "Can the model be used for gpu instances"
        },
        "model_type": {
            "type": "string",
            "description": "Underlying model type",
            "enum": [
                "random_forest",
                "pytorch_example",
                "pytorch_solar"
            ]
        },
        "model_zoom": {
            "type": "integer",
            "description": "The tile zoom level to run inferences on"
        },
        "model_inputshape": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "integer"
            }
        },
        "classes": {
            "$ref": "./util/model-classes.json"
        },
        "storage": {
            "type": "boolean"
        },
        "bounds": {
            "type": ["array", "null"],
            "description": "Recommended geographic area on which this model can be used",
            "items": {
                "type": "number"
            }
        },
        "meta": {
            "type": "object",
            "description": "Generic key/value store for additional model metadata"
        }
    }
}
