{
    "type": "object",
    "required": [
        "id",
        "created",
        "active",
        "uid",
        "name",
        "imagery_source_id",
        "model_type",
        "model_inputshape",
        "model_zoom",
        "storage",
        "classes",
        "meta",
        "bounds",
        "osmtag_id"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$ref": "./util/id.json"
        },
        "created": {
            "type": "integer"
        },
        "uid": {
            "type": "integer"
        },
        "name": {
            "type": "string",
            "description": "Human-readable name of the Model"
        },
        "active": {
            "type": "boolean",
            "description": "Can the model be used for gpu instances"
        },
        "imagery_source_id": {
            "type": "integer"
        },
        "model_type": {
            "type": "string",
            "description": "Underlying model type",
            "enum": [
                "unet3",
                "deeplabv3plus",
                "random_forest",
                "pytorch_example",
                "pytorch_solar"
            ]
        },
        "model_zoom": {
            "type": "integer",
            "description": "The tile zoom level to run inferences on"
        },
        "model_inputshape": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "integer"
            }
        },
        "classes": {
            "$ref": "./util/classes.json"
        },
        "storage": {
            "type": "boolean"
        },
        "bounds": {
            "type": ["array", "null"],
            "description": "Recommended geographic area on which this model can be used",
            "items": {
                "type": "number"
            }
        },
        "meta": {
            "type": "object",
            "description": "Generic key/value store for additional model metadata"
        },
        "osmtag": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "tags",
                    "name"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Class Name"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "$ref": "./util/osm-tagmap-item.json"
                        }
                    }
                }
            }
        },
        "osmtag_id": {
            "type": ["integer", "null"],
            "description": "Optional default list of OSM Tags => Model Classes"
        }
    }
}
