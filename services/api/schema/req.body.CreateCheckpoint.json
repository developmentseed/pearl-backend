{
    "type": "object",
    "required": [
        "name",
        "classes"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "The human readable name of the checkpoint"
        },
        "parent": {
            "type": "integer",
            "description": "The ID of the parent checkpoint that was retrained off of"
        },
        "analytics": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "counts",
                    "percent",
                    "f1score"
                ],
                "properties": {
                    "counts": {
                        "type": "number"
                    },
                    "percent": {
                        "type": "number"
                    },
                    "f1score": {
                        "type": "number"
                    }
                }
            }
        },
        "classes": {
            "type": "array",
            "description": "Named output classes & their associated colours",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "color"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string"
                    }
                }
            }
        },
        "retrain_geoms": {
            "type": "array",
            "description": "Array of GeoJSON Multipoint geometries that were used for retraining. Length of geomms array must equals classes",
            "items": {
                "type": ["null", "object"]
            }
        },
        "input_geoms": {
            "type": "array",
            "description": "Array of GeoJSON FeatureCollection that were input by the user. Length of this array must equals classes",
            "items": {
                "type": ["null", "object"]
            }
        },
        "tagmap": {
            "$ref": "./util/osm-tagmap.json"
        }
    }
}
